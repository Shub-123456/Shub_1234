pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout code from a Git repository
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                // Build the code using a shell script
                sh 'echo 'building..''
            }
        }
    }
    
    post {
        success {
            // Archive build artifacts
            archiveArtifacts artifacts: '**/target/*.jar', allowEmptyArchive: true
        }
    }
}
